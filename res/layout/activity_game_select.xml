<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ulruru_bg2"
    tools:context=".GameSelectActivity" >
     
    <ImageView
        android:id="@+id/gamesel_return_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:src="@drawable/btn_return" />

    <ImageView
        android:id="@+id/gamesel_singlep_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gamesel_title_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/btn_singleplay" />

    <ImageView
        android:id="@+id/gamesel_multyp_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gamesel_singlep_btn"
        android:layout_below="@+id/gamesel_singlep_btn"
        android:layout_marginTop="70dp"
        android:src="@drawable/btn_multyplay" />

    <TextView
        android:id="@+id/gamesel_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gamesel_return_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/gamesel_title"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />
    
</RelativeLayout>