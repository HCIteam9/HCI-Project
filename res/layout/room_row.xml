<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >



    <TextView
        android:id="@+id/rlst_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:text="Title" />

    <TextView
        android:id="@+id/rlst_maxp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rlst_title"
        android:layout_marginLeft="5dp"
        android:text="#" />

    <ImageView
        android:id="@+id/rlst_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rlst_title"
        android:layout_alignTop="@+id/rlst_title"
        android:layout_toRightOf="@+id/rlst_title"
        android:src="@drawable/lock" />

    <TextView
        android:id="@+id/rlst_currentp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rlst_maxp"
        android:layout_marginLeft="5dp"
        android:text="current player" />

</RelativeLayout>